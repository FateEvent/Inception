service mysql start;
mysql -e "CREATE DATABASE IF NOT EXISTS \`mydatabase\`;"
mysql -e "CREATE USER IF NOT EXISTS \`myuser\`@'localhost' IDENTIFIED BY 'mypassword';"
mysql -e "GRANT ALL PRIVILEGES ON \`mydatabase\`.* TO \`myuser\`@'%' IDENTIFIED BY 'mypassword';"
mysql -e "ALTER USER 'root'@'localhost' IDENTIFIED BY 'mysecretpassword';"
mysqladmin -u root -p'mysecretpassword' flush-privileges
# mysql -e "FLUSH PRIVILEGES;"
mysqladmin -u root -p'mysecretpassword' shutdown
exec mysqld_safe